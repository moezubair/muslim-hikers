---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features from '~/components/widgets/Features.astro';
import Features3 from '~/components/widgets/Features3.astro';

const metadata = {
  title: 'Volunteer Opportunity - Web Developer',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Features
  id="features"
  tagline=""
  title="Web Developer"
  subtitle="We are looking for a passionate and committed Web Developer to join our team at Muslim Hikers Ontario. \
  As a valued member of our team, you'll help maintain and add functionality to this website \
  This is an excellent opportunity for individuals who are enthusiastic about making a positive impact in their community and supporting our \
   mission of promoting outdoor activities in the Muslim Community. Your Responsbilities will be:"
  items={[
    {
      title: 'Maintaining Codebase',
      description:
        'Maintain the code base in Github, this includes adding and removing content',
      icon: 'tabler:code',
    },
    {
      title: 'Add Features',
      description:
        'Assist in creating new features to enhance the website and allow our members to connect to the events easier.',
      icon: 'tabler:components',
    },
    {
      title: 'Write code in Tailwindcss, HTML and Javascript',
      description:
        'Web development work will be mostly front-end heavy.',
      icon: 'tabler:list-check',
    },
    {
      title: 'Analytics and Reporting',
      description:
        'Collaborate on the analysis of social media metrics to assess campaign effectiveness and provide insights for improvement.',
      icon: 'tabler:rocket',
    },

  ]}
/>
<Features3
    title="Qualifications"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        description: 'Experience writing code in HTML, CSS, Javascript and any of the following libraries: Tailwind, Astro, Gatsby, Nuxt, Nextjs.',
        icon: 'tabler:check',
      },
      {
        description: 'Understanding of social media platforms and willingness to learn.',
        icon: 'tabler:check',
      },
      {
        description: 'Creativity and a collaborative mindset.',
        icon: 'tabler:check',
      },
      {
        description: 'Available to put in 3-5 hours a week.',
        icon: 'tabler:check',
      },


    ]}
  />

  <ContactUs
    title="Apply for this Position"
    subtitle="Fill out the following form if you'd like to apply.<br />Please note this is a Volunteer Position."
    button="Apply"
    name="webdeveloper"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
        {
        type: 'tel',
        name: 'phone',
        label: 'Phone Number',
      },
    ]}
    textarea={{
      label: 'Please list qualifications and experiences that you bring to this role',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description=""
  />
</Layout>