---
const images = [
  '/slides/slide1.jpg',
  '/slides/slide2.jpg',
  '/slides/slide3.jpg',
];
let current = 0;
function next() { current = (current + 1) % images.length; }
function prev() { current = (current - 1 + images.length) % images.length; }
---
<div class="slideshow">
  <img src={images[current]} alt={`Slide ${current + 1}`} class="slide-img" />
  <div class="controls">
    <button type="button" onClick={prev}>&larr; Prev</button>
    <button type="button" onClick={next}>Next &rarr;</button>
  </div>
</div>
<style>
  .slideshow { text-align: center; }
  .slide-img { max-width: 100%; max-height: 60vh; margin: 1rem auto; }
  .controls { margin-top: 1rem; }
  button { margin: 0 1rem; padding: 0.5rem 1rem; }
</style>